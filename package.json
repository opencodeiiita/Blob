{
  "name": "Blob",
  "private": true,
  "scripts": {
    "setup": "node --no-warnings scripts/setup.js",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:server": "turbo run dev --filter=server",
    "dev:mobile": "turbo run dev --filter=mobile",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "dotenv -e .env -- turbo run db:generate --filter=@blob/db",
    "db:migrate": "dotenv -e .env -- turbo run db:migrate --filter=@blob/db",
    "db:push": "dotenv -e .env -- turbo run db:push --filter=@blob/db",
    "db:studio": "dotenv -e .env -- turbo run db:studio --filter=@blob/db",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.7.4",
    "turbo": "^2.7.0",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}